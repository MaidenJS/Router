{
  "build": {
    "folder": "public/app/build/",
    "files": {
      "js": "app.js",
      "css": "app.css",
      "vendorjs": "vendor.js",
      "vendorcss": "vendor.css"
    }
  },
  "spec": [
    "public/app/**/*.spec.js"
  ],
  "js": [
    "public/app/scripts/**/*.module.js",
    "public/app/scripts/**/*.config.js",
    "public/app/scripts/**/*.constant.js",
    "public/app/scripts/**/*.controller.js",
    "public/app/scripts/**/*.filter.js",
    "public/app/scripts/**/*.factory.js",
    "public/app/scripts/**/*.directive.js",
    "public/app/scripts/**/*.provider.js"
  ],
  "sass": [
    "public/app/styles/main.scss"
  ],
  "vendorjs": [
    "public/bower_components/jquery/dist/jquery.js",
    "public/bower_components/lodash/dist/lodash.js",
    "public/bower_components/bootstrap/dist/js/bootstrap.js",
    "public/bower_components/angular/angular.js",
    "public/bower_components/angular-ui-router/release/angular-ui-router.js",
    "public/bower_components/restangular/dist/restangular.js",
    "public/bower_components/angular-animate/angular-animate.js"
  ],
  "vendorcss": [
    "public/app/styles/angular/angular-animations.css"
  ],
  "testing": [
    "public/bower_components/angular/angular.js",
    "public/bower_components/angular-mocks/angular-mocks.js"
  ]

}